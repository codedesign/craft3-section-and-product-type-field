{% import '_includes/forms' as forms %}

{% if field.multiple %}
        {{ forms.checkboxGroup({
                id : field.handle,
                name : field.handle,
                values: value,
                placeholder: 'Choose Product Type...' | t('section-and-product-type'),
                options: productTypes
        }) }}
{% else %}
        {{ forms.radioGroup({
                id : field.handle,
                name : field.handle,
                value: value,
                placeholder: 'Choose Product Type...' | t('section-and-product-type'),
                options: productTypes
        }) }}
        {% if value is iterable %}
                <p class="warning">{{ "Multiple product type selected but only one can be selected in the field." | t('section-and-product-type') }}</p>
        {% endif %}
{% endif %}

